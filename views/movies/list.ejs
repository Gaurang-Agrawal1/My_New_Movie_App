<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= list.name %></title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <style>
      .mt-5 {
        margin-top: 5rem !important;
      }
    </style>

      <!-- the all the lists we have created here we movies which we have added -->

    <nav
      class="navbar fixed-top navbar-expand-lg navbar-dark"
      style="background-color: darkslateblue"
    >
      <div class="container">
        <a class="navbar-brand" href="/movies/search"
          ><i
            class="fas fa-shopping-basket"
            style="margin-right: 10px; font-size: 1.7rem"
          ></i
          >Movie App</a
        >
        <!-- <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarTogglerDemo02"
          aria-controls="navbarTogglerDemo02"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button> -->
        
        <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a
                style="font-size: 24px"
                class="nav-link active"
                href="/movies/search"
                >Home</a
              >
            </li>
          </ul>
          <div class="navbar-nav ml-auto">
            <a href="#" class="nav-link text-capitalize">Welcome User </a>
            <a href="/auth/logout" class="btn btn-dark">Logout</a>
          </div>
        </div>
      </div>
    </nav>

    <div class="container">
      <h1 class="mt-5">List-Name : <%= list.name %></h1>
      <div class="alert alert-dark" role="alert">
        <!-- A simple primary alertâ€”check it out! -->
        <p class="mb-2" style="font-weight: 700">
          List-Type : <%= list.isPublic ? 'Public' : 'Private' %>
        </p>
      </div>

      <h2>Your Movies list</h2>
      <ul class="list-group mb-5">
        <% list.movies.forEach(movie => { %>
        <li
          class="list-group-item d-flex justify-content-between align-items-center"
        >
          <div>
            <h5><%= movie.title %></h5>
            <p>Year: <%= movie.year %></p>
            <p>IMDB ID: <%= movie.imdbID %></p>
          </div>
          <form action="/lists/remove" method="POST">
            <input type="hidden" name="listId" value="<%= list._id %>" />
            <input type="hidden" name="movieId" value="<%= movie._id %>" />
            <button type="submit" class="btn btn-danger">Delete Movie</button>
          </form>
        </li>
        <% }) %>
      </ul>

      <a href="/movies/home" class="btn btn-secondary mt-5"
        >Back to PlayList Area</a
      >
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
